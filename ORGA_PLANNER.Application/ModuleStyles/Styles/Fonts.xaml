<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

    <System:Double x:Key="DefaultFontSize">14</System:Double>
    <System:Double x:Key="DefaultHeaderFontSize">18</System:Double>

    <FontWeight x:Key="DefaultLightFontWeight">Light</FontWeight>
    <FontWeight x:Key="DefaultBoldFontWeight">Bold</FontWeight>

    <FontWeight x:Key="DefaultHeaderFontWeight">SemiBold</FontWeight>
    <FontWeight x:Key="DefaultValueFontWeight">Normal</FontWeight>

    <FontFamily x:Key="DefaultFontFamily">Calibri</FontFamily>

    <System:Double x:Key="LargeFontSize">36</System:Double>

</ResourceDictionary>